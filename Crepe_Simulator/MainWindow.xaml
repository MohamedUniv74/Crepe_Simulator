<Window x:Class="Crepe_Simulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:Crepe_Simulator"
        mc:Ignorable="d"
        Title="Accueil" Height="1080" Width="1920">

    <Window.Resources>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20"
                                Padding="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="/blury-backgournd.png" />
        </Grid.Background>

        <Button Content="JOUER"
                Click="PlayButton_Click"
                Style="{StaticResource RoundedButton}"
                HorizontalAlignment="Center"
                Height="140"
                Margin="0,372,0,0"
                VerticalAlignment="Top"
                Width="462"
    
                Background="#FFEAA53F"
                FontSize="48" FontFamily="Alef" />

        <Button Content="PARAMETRE"
                Style="{StaticResource RoundedButton}"
                HorizontalAlignment="Center"
                Height="140"
                Margin="0,628,0,0"
                VerticalAlignment="Top"
                Width="462"
              
                Background="#FFEAA53F"
                FontSize="48" FontFamily="Alef" RenderTransformOrigin="0.5,0.5" >
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="3.622"/>
                    <RotateTransform/>
                    <TranslateTransform X="-1.948"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Grid>

</Window>