<Window x:Class="Crepe_Simulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:Crepe_Simulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">

    <Window.Resources>
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20"
                                Padding="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Uniform" ImageSource="/blury-backgournd.png"/>
        </Grid.Background>

        <Button Content="JOUER"
                Style="{StaticResource RoundedButton}"
                HorizontalAlignment="Center"
                Height="75"
                Margin="0,104,0,0"
                VerticalAlignment="Top"
                Width="203"
                Click="Button_Click"
                Background="#FFEAA53F"
                FontSize="22" FontFamily="Alef" />

        <Button Content="PARAMETRE"
                Style="{StaticResource RoundedButton}"
                HorizontalAlignment="Center"
                Height="75"
                Margin="0,241,0,0"
                VerticalAlignment="Top"
                Width="203"
                Click="Button_Click"
                Background="#FFEAA53F"
                FontSize="22" FontFamily="Alef" />
    </Grid>

</Window>