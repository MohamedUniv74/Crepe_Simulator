<UserControl x:Class="Crepe_Simulator.UCCuisson"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Crepe_Simulator"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="1920" Height="1080">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/images/blury-background.png"/>
        </Grid.Background>
        <Rectangle HorizontalAlignment="Left" Height="450" Stroke="Black" VerticalAlignment="Top" Width="800" Fill="White" Opacity="0.5"/>
        <Rectangle HorizontalAlignment="Center" Height="37" Stroke="White" VerticalAlignment="Top" Width="400" Fill="Black" Opacity="0.8" RadiusX="20" RadiusY="20" Margin="0,406,0,0"/>
        <Slider HorizontalAlignment="Center" Margin="0,414,0,0" VerticalAlignment="Top" Width="374" Height="20" Foreground="Red" Maximum="100" Value="50" IsSnapToTickEnabled="True" Background="Red" SmallChange="1"/>
        <Label Content="Niveau du feu :" HorizontalAlignment="Center" Margin="0,378,0,0" VerticalAlignment="Top" Width="116" FontWeight="Bold" FontSize="15" Height="31" Foreground="Black"/>
        <Rectangle HorizontalAlignment="Left" Height="100" Margin="255,199,0,0" Stroke="Black" VerticalAlignment="Top" Width="37" Fill="#FF4C4C4C" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="62.904"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Ellipse HorizontalAlignment="Left" Height="222" Stroke="Black" VerticalAlignment="Top" Width="228" Fill="Black" Margin="295,69,0,0"/>
        <Ellipse HorizontalAlignment="Left" Height="20" Margin="240,251,0,0" Stroke="Black" VerticalAlignment="Top" Width="20" Fill="#FF5F5F5F"/>
        <Image Source="/images/crepe_realiste.png" Margin="311,78,289,172" Width="200" Height="200"/>
        <Label Margin="695,10,0,387">
            <Border BorderBrush="Black" BorderThickness="2" CornerRadius="10" Padding="5" Width="90" Height="35" Background="#FFFFDE00">
                <TextBlock Text="Temps : XXs"/>
            </Border>
        </Label>
        <Label Margin="10,10,685,387">
            <Border BorderBrush="Black" BorderThickness="2" CornerRadius="10" Padding="5" Width="90" Height="35" Background="#FFFFC139">
                <TextBlock Text="Score : 000"/>
            </Border>
        </Label>
    </Grid>
</UserControl>
