<UserControl x:Class="Crepe_Simulator.UCJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Crepe_Simulator"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Image de fond -->
        <Image Source="/images/jeu.png" Stretch="Fill"/>

        <!-- Viewbox pour maintenir les proportions -->
        <Viewbox Stretch="Uniform">
            <Canvas Width="800" Height="450">

                <!-- TIMER - Style néon bleu -->
                <Border Canvas.Left="10" Canvas.Top="10" 
                        Background="#AA2C3E50" 
                        BorderBrush="#FF3498DB" 
                        BorderThickness="1.5" 
                        CornerRadius="8"
                        Padding="6,2">
                    <Border.Effect>
                        <DropShadowEffect Color="#FF3498DB" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal">
                        <!-- Icône horloge -->
                        <Viewbox Width="12" Height="12" Margin="0,0,5,0">
                            <Canvas Width="24" Height="24">
                                <Ellipse Width="24" Height="24" Stroke="#FF3498DB" StrokeThickness="2.5" Fill="Transparent"/>
                                <Line X1="12" Y1="12" X2="12" Y2="6" Stroke="#FF3498DB" StrokeThickness="2.5"/>
                                <Line X1="12" Y1="12" X2="16" Y2="12" Stroke="#FF3498DB" StrokeThickness="2"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock x:Name="label_timer" Text="00:00" 
                                   Foreground="#FF3498DB" 
                                   FontSize="11" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- ARGENT - Style doré -->
                <Border Canvas.Left="10" Canvas.Top="32" 
                        Background="#AA2C3E50" 
                        BorderBrush="#FFFFB105" 
                        BorderThickness="1.5" 
                        CornerRadius="8"
                        Padding="6,2">
                    <Border.Effect>
                        <DropShadowEffect Color="#FFFFB105" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal">
                        <!-- Icône pièce -->
                        <Viewbox Width="12" Height="12" Margin="0,0,5,0">
                            <Canvas Width="24" Height="24">
                                <Ellipse Width="24" Height="24" Stroke="#FFFFB105" StrokeThickness="2.5" Fill="#FFFFD700"/>
                                <TextBlock Text="€" FontSize="16" FontWeight="Bold" 
                                           Foreground="#FF2C3E50" Canvas.Left="7" Canvas.Top="2"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock x:Name="label_argent" Text="0€" 
                                   Foreground="#FFFFB105" 
                                   FontSize="11" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Bouton QUITTER -->
                <Button x:Name="bouton_quitter" Content="QUITTER" 
                        Canvas.Left="714" Canvas.Top="10"
                        Height="27" Width="76" 
                        FontWeight="Bold" 
                        Background="#FFFF3939" 
                        Click="butQuitter">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="Black" BorderThickness="3"
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Chevremiel -->
                <Image Canvas.Left="193" Canvas.Top="290" Width="74" Height="70" 
                       Source="/images/Chevremiel.png" Stretch="Fill"/>

                <!-- Caramel -->
                <Image Canvas.Left="116" Canvas.Top="269" Width="56" Height="66" 
                       Source="/images/caramel.png" Stretch="Fill"/>

                <!-- Jelly -->
                <Image Canvas.Left="34" Canvas.Top="340" Width="53" Height="67" 
                       Source="/images/jelly.png" Stretch="Fill"/>

                <!-- Nutella -->
                <Image Canvas.Left="34" Canvas.Top="267" Width="55" Height="63" 
                       Source="/images/nutella.png" Stretch="Fill"/>

                <!-- Sucre -->
                <Image Canvas.Left="116" Canvas.Top="340" Width="55" Height="73" 
                       Source="/images/sucre.png" Stretch="Fill"/>

                <!-- Poêle -->
                <Image Canvas.Left="312" Canvas.Top="276" Width="68" Height="120" 
                       Source="/images/poele.png" Stretch="Fill"/>

                <!-- Poubelle -->
                <Image Canvas.Left="673" Canvas.Top="250" Width="117" Height="140" 
                       Source="/images/poubelle.png" Stretch="Fill"/>

                <!-- Plaque de cuisson -->
                <Rectangle Canvas.Left="400" Canvas.Top="280" Height="110" Width="161" 
                          Stroke="Black" Fill="#FF252525" RadiusX="16" RadiusY="16"/>

                <!-- Boutons de la plaque -->
                <Ellipse Canvas.Left="424" Canvas.Top="290" Height="36" Width="36" 
                        Stroke="#FF777777" Fill="Black"/>
                <Ellipse Canvas.Left="498" Canvas.Top="290" Height="36" Width="38" 
                        Stroke="#FF777777" Fill="Black"/>
                <Ellipse Canvas.Left="424" Canvas.Top="340" Height="36" Width="37" 
                        Stroke="#FF777777" Fill="Black"/>
                <Ellipse Canvas.Left="499" Canvas.Top="340" Height="36" Width="37" 
                        Stroke="#FF777777" Fill="Black"/>

                <!-- Assiette -->
                <Image Canvas.Left="566" Canvas.Top="287" Width="93" Height="96" 
                       Source="/images/Assiette.png" Stretch="Fill"/>

            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>