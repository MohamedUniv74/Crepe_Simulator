<UserControl x:Class="Crepe_Simulator.UCJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Crepe_Simulator"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Image de fond -->
        <Image Source="/images/jeu.png" Stretch="Fill"/>

        <!-- Viewbox pour maintenir les proportions -->
        <Viewbox Stretch="Uniform">
            <Canvas Width="800" Height="450">

                <!-- TIMER  -->
                <Border Canvas.Left="10" Canvas.Top="10" 
                        Background="#AA2C3E50" 
                        BorderBrush="#FF3498DB" 
                        BorderThickness="1.5" 
                        CornerRadius="8"
                        Padding="6,2">
                    <Border.Effect>
                        <DropShadowEffect Color="#FF3498DB" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal">

                        <!-- Icône horloge -->
                        <Viewbox Width="12" Height="12" Margin="0,0,5,0">
                            <Canvas Width="24" Height="24">
                                <Ellipse Width="24" Height="24" Stroke="#FF3498DB" StrokeThickness="2.5" Fill="Transparent"/>
                                <Line X1="12" Y1="12" X2="12" Y2="6" Stroke="#FF3498DB" StrokeThickness="2.5"/>
                                <Line X1="12" Y1="12" X2="16" Y2="12" Stroke="#FF3498DB" StrokeThickness="2"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock x:Name="label_timer" Text="00:00" 
                                   Foreground="#FF3498DB" 
                                   FontSize="11" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- ARGENT  -->
                <Border Canvas.Left="10" Canvas.Top="37" 
                        Background="#AA2C3E50" 
                        BorderBrush="#FFFFB105" 
                        BorderThickness="1.5" 
                        CornerRadius="8"
                        Padding="6,2" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Border.Effect>
                        <DropShadowEffect Color="#FFFFB105" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                    </Border.Effect>
                    <StackPanel Orientation="Horizontal">

                        <!-- Icône pièce -->
                        <Viewbox Width="12" Height="12" Margin="0,0,5,0">
                            <Canvas Width="24" Height="24">
                                <Ellipse Width="24" Height="24" Stroke="#FFFFB105" StrokeThickness="2.5" Fill="#FFFFD700"/>
                                <TextBlock Text="€" FontSize="16" FontWeight="Bold" 
                                           Foreground="#FF2C3E50" Canvas.Left="7" Canvas.Top="2"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock x:Name="label_argent" Text="0€" 
                                   Foreground="#FFFFB105" 
                                   FontSize="11" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Bouton QUITTER -->
                <Button x:Name="bouton_quitter" Content="QUITTER" 
                        Canvas.Left="714" Canvas.Top="10"
                        Height="27" Width="76" 
                        FontWeight="Bold" 
                        Background="#FFFF3939" 
                        Click="butQuitter">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="Black" BorderThickness="3"
                                    CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Chevremiel -->
                <Image Canvas.Left="197" Canvas.Top="293" Width="56" Height="54" 
                       Source="/images/Chevremiel.png" Stretch="Fill"/>

                <!-- Caramel -->
                <Image Canvas.Left="127" Canvas.Top="271" Width="33" Height="39" 
                       Source="/images/caramel.png" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <!-- Jelly -->
                <Image Canvas.Left="46" Canvas.Top="340" Width="28" Height="43" 
                       Source="/images/jelly.png" Stretch="Fill" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <!-- Nutella -->
                <Image Canvas.Left="42" Canvas.Top="269" Width="36" Height="41" 
                       Source="/images/nutella.png" Stretch="Fill" AllowDrop="True" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <!-- Sucre -->
                <Image Canvas.Left="127" Canvas.Top="340" Width="33" Height="50" 
                       Source="/images/sucre.png" Stretch="Fill" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <!-- Poubelle -->
                <Image Canvas.Left="673" Canvas.Top="250" Width="117" Height="140" 
                       Source="/images/poubelle.png" Stretch="Fill"/>

                <!-- Timer Preparation-->
                <TextBlock x:Name="txtTimer" Text="" FontSize="16" FontWeight="Bold" Canvas.Left="353" Canvas.Top="255" HorizontalAlignment="Left" VerticalAlignment="Center" Width="275"/>

                <!-- Message erreur crepe déja présente-->
                <Label x:Name="labelMessageErreurVente" Canvas.Left="346" Canvas.Top="250" Width="275" FontSize="16" FontWeight="Bold" Content="Aucun client ne veut cette crêpe !" Foreground="#FFC80000" Visibility="Hidden"/>

                <!-- Message de confirmation d'achat d'amélioration -->
                <Label x:Name="labelMessageConfirmation" 
                       Canvas.Left="290" Canvas.Top="220" 
                       Width="220" Height="30"
                       FontSize="14" FontWeight="Bold" 
                       Content="Amélioration achetée !" 
                       Foreground="#FF27C93F" 
                       HorizontalContentAlignment="Center"
                       Visibility="Hidden"/>

                <!-- Poêle -->
                <Image x:Name="imgPoele" Canvas.Left="312" Canvas.Top="276" Width="68" Height="120" Source="/images/poele.png" Stretch="Fill" Panel.ZIndex="1">
                    <Image.RenderTransform>
                        <RotateTransform x:Name="PoeleRotation" Angle="0" CenterX="50" CenterY="25"/>
                    </Image.RenderTransform>
                </Image>

                <!-- Plaque de cuisson -->
                <Rectangle Canvas.Left="400" Canvas.Top="280" Height="110" Width="161" 
                          Stroke="Black" Fill="#FF252525" RadiusX="16" RadiusY="16"/>

                <!-- Boutons de la plaque -->
                <Ellipse Canvas.Left="424" Canvas.Top="290" Height="36" Width="36" 
                        Stroke="#FF777777" Fill="Black"/>
                <Ellipse Canvas.Left="498" Canvas.Top="290" Height="36" Width="38" 
                        Stroke="#FF777777" Fill="Black"/>
                <Ellipse Canvas.Left="424" Canvas.Top="340" Height="36" Width="37" 
                        Stroke="#FF777777" Fill="Black"/>
                <Ellipse Canvas.Left="499" Canvas.Top="340" Height="36" Width="37" 
                        Stroke="#FF777777" Fill="Black"/>

                <!-- Crepe 1-->
                <Image x:Name="imgCrepe1" Canvas.Left="413" Canvas.Top="279" Width="49" Height="48" 
                        Source="/images/crepe_realiste.png" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Top" Panel.ZIndex="1" Visibility="Hidden"/>

                <!-- Crepe 2-->
                <Image x:Name="imgCrepe2" Canvas.Left="578" Canvas.Top="298" Width="70" Height="70" 
                        Source="/images/crepe_realiste.png" Stretch="Fill" HorizontalAlignment="Center" VerticalAlignment="Top" Panel.ZIndex="1" Visibility="Hidden"/>

                <!-- Assiette -->
                <Image Canvas.Left="566" Canvas.Top="287" Width="93" Height="96" 
                       Source="/images/Assiette.png" Stretch="Fill"/>

                <!-- Bouton Améliorer la cuisson -->
                <Button x:Name="bouton_ameliorer" 
                        Canvas.Left="270" Canvas.Top="393" 
                        Height="40" Width="140" 
                        FontSize="9" FontWeight="Bold" 
                        Foreground="White"
                        Background="#FFFF8C00"
                        Click="bouton_ameliorer_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="#FFFF4500" 
                                    BorderThickness="2" 
                                    CornerRadius="6">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="2" Opacity="0.6"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Buton Préparation-->
                <Button x:Name="bouton_preparer" Content="Préparer" FontWeight="Bold" Background="#FFFFBB27" Canvas.Left="430" Canvas.Top="393" Height="20" Width="102" HorizontalAlignment="Center" VerticalAlignment="Center" Click="bouton_preparer_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="1" CornerRadius="3">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Nutella" Canvas.Left="46" Canvas.Top="311" Height="15" Width="28" 
                        FontSize="7" FontWeight="Bold" Foreground="White"
                        Background="#FF7B3F00" 
                        Click="but_nuttela">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="#FF3D1F00" 
                                    BorderThickness="1.5" 
                                    CornerRadius="4">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.5"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Caramel" Canvas.Left="125" Canvas.Top="311" Height="15" Width="35" 
                        FontSize="7" FontWeight="Bold" Foreground="White"
                        Background="#FFCC8844" 
                        Click="but_caramel" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="#FF8B5A2B" 
                                    BorderThickness="1.5" 
                                    CornerRadius="4">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.5"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Sucre" Canvas.Left="127" Canvas.Top="383" Height="15" Width="28" 
                        FontSize="7" FontWeight="Bold" Foreground="#FF333333"
                        Background="#FFEEEEEE" 
                        Click="but_sucre" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="#FFCCCCCC" 
                                    BorderThickness="1.5" 
                                    CornerRadius="4">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.5"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Confiture" Canvas.Left="39" Canvas.Top="383" Height="15" Width="44" 
                        FontSize="7" FontWeight="Bold" Foreground="White"
                        Background="#FFCC2244" 
                        Click="but_confutture" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="#FF8B0000" 
                                    BorderThickness="1.5" 
                                    CornerRadius="4">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.5"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Chèvre-Miel" Canvas.Left="200" Canvas.Top="362" Height="14" Width="49" 
                        FontSize="7" FontWeight="Bold" Foreground="#FF333333"
                        Background="#FFFFCC66" 
                        Click="but_cmiel" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="#FFCC9933" 
                                    BorderThickness="1.5" 
                                    CornerRadius="4">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.5"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- CLIENT 1 (Nutella) -->
                <Image x:Name="imgClient2" Source="/images/clients/client2.png" Visibility="Hidden" Width="120" Height="160" Canvas.Left="100" Canvas.Top="55"/>
                <Image x:Name="imgcmd1" Source="/images/commandes/cmd_nutella.png" Visibility="Hidden" Width="120" Height="160" Canvas.Left="160" Canvas.Top="15"/>
                <!-- Jauge Client 1 -->
                <Border x:Name="borderJauge1" Canvas.Left="85" Canvas.Top="60" Width="10" Height="100" 
                        Background="#AA000000" BorderBrush="#FF333333" BorderThickness="1" CornerRadius="5" Visibility="Hidden">
                    <Rectangle x:Name="rectJauge1" Fill="#FF27C93F" VerticalAlignment="Bottom" Height="100"/>
                </Border>

                <!-- CLIENT 2 (Caramel) -->
                <Image x:Name="imgClient3" Source="/images/clients/client3.png" Visibility="Hidden" Width="120" Height="160" Canvas.Left="300" Canvas.Top="55"/>
                <Image x:Name="imgcmd2" Source="/images/commandes/cmd_caramel.png" Visibility="Hidden" Width="120" Height="160" Canvas.Left="370" Canvas.Top="15"/>
                <!-- Jauge Client 2 -->
                <Border x:Name="borderJauge2" Canvas.Left="285" Canvas.Top="60" Width="10" Height="100" 
                        Background="#AA000000" BorderBrush="#FF333333" BorderThickness="1" CornerRadius="5" Visibility="Hidden">
                    <Rectangle x:Name="rectJauge2" Fill="#FF27C93F" VerticalAlignment="Bottom" Height="100"/>
                </Border>

                <!-- CLIENT 3 (Chèvre-Miel) -->
                <Image x:Name="imgClient4" Source="/images/clients/client4.png" Visibility="Hidden" Width="120" Height="160" Canvas.Left="500" Canvas.Top="55"/>
                <Image x:Name="imgcmd3" Source="/images/commandes/cmd_cmiel.png" Visibility="Hidden" Width="120" Height="160" Canvas.Left="560" Canvas.Top="15"/>
                <!-- Jauge Client 3 -->
                <Border x:Name="borderJauge3" Canvas.Left="485" Canvas.Top="60" Width="10" Height="100" 
                        Background="#AA000000" BorderBrush="#FF333333" BorderThickness="1" CornerRadius="5" Visibility="Hidden">
                    <Rectangle x:Name="rectJauge3" Fill="#FF27C93F" VerticalAlignment="Bottom" Height="100"/>
                </Border>

                <!-- CLIENT 4 (Confiture) -->
                <Image x:Name="imgClient5" Source="/images/clients/client5.png" Visibility="Hidden" Width="120" Height="160" Canvas.Left="200" Canvas.Top="55"/>
                <Image x:Name="imgcmd4" Source="/images/commandes/cmd_confitture.png" Visibility="Hidden" Width="120" Height="160" Canvas.Left="160" Canvas.Top="15"/>
                <!-- Jauge Client 4 -->
                <Border x:Name="borderJauge4" Canvas.Left="185" Canvas.Top="60" Width="10" Height="100" 
                        Background="#AA000000" BorderBrush="#FF333333" BorderThickness="1" CornerRadius="5" Visibility="Hidden">
                    <Rectangle x:Name="rectJauge4" Fill="#FF27C93F" VerticalAlignment="Bottom" Height="100"/>
                </Border>

                <!-- CLIENT 5 (Sucre) -->
                <Image x:Name="imgClient6" Source="/images/clients/client5.png" Visibility="Hidden" Width="120" Height="160" Canvas.Left="400" Canvas.Top="55"/>
                <Image x:Name="imgcmd5" Source="/images/commandes/cmd_sucre.png" Visibility="Hidden" Width="120" Height="160" Canvas.Left="460" Canvas.Top="15"/>
                <!-- Jauge Client 5 -->
                <Border x:Name="borderJauge5" Canvas.Left="385" Canvas.Top="60" Width="10" Height="100" 
                        Background="#AA000000" BorderBrush="#FF333333" BorderThickness="1" CornerRadius="5" Visibility="Hidden">
                    <Rectangle x:Name="rectJauge5" Fill="#FF27C93F" VerticalAlignment="Bottom" Height="100"/>
                </Border>

                <!-- Bouton Vendre -->
                <Button x:Name="bouton_vendre" Content="Vendre" FontWeight="Bold" Background="#FF27BB5A" Canvas.Left="566" Canvas.Top="393" Height="20" Width="93" HorizontalAlignment="Center" VerticalAlignment="Center" Click="bouton_vendre_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderBrush="Black" BorderThickness="2" CornerRadius="5">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="2" Opacity="0.5"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>