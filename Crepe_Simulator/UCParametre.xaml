<UserControl x:Class="Crepe_Simulator.UCParametre"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- VIEWBOX pour adapter à la fenêtre comme UCJeu -->
    <Viewbox Stretch="Uniform">
        <Grid Width="800" Height="450">
            <!-- Titre -->
            <TextBlock Text="Paramètre"
                       FontSize="82"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top" Margin="0,20,0,0" FontFamily="Monotype Corsiva"/>


            <!-- Bouton Volume -->









            <Button Content="TEMPS"
        Width="280" Height="60"
        FontSize="24" FontWeight="Bold"
        Background="#FFFFB105"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="264,165,0,0"
        Click="Button_Click">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    BorderBrush="Black"
                    BorderThickness="3"
                    CornerRadius="20">
                            <ContentPresenter
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>

                </Button.Template>
            </Button>





            <!-- Bouton Fullscreen -->
            <Button x:Name="Bouton_fullscreen" Content="FULLSCREEN"
        Width="280" Height="60"
        FontSize="24" FontWeight="Bold"
        Background="#FFFFB105"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="264,245,0,0"
        Click="Bouton_fullscreen_Click">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    BorderBrush="Black"
                    BorderThickness="3"
                    CornerRadius="20">
                            <ContentPresenter
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>

            </Button>





            <!-- Bouton Retour -->
            <Button x:Name="bouton_retour_parametre" Content="RETOUR"
        Width="280" Height="60"
        FontSize="24" FontWeight="Bold"
        Background="Red"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Margin="264,322,0,0"
        Click="but_retour_parametre">

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    BorderBrush="Black"
                    BorderThickness="3"
                    CornerRadius="20">
                            <ContentPresenter
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>

            </Button>

        </Grid>
    </Viewbox>
</UserControl>