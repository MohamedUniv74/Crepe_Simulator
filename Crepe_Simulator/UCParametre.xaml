<UserControl x:Class="Crepe_Simulator.UCParametre"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Crepe_Simulator"
             mc:Ignorable="d" 
             Height="1080" Width="1920">
    <Grid>

        <!-- Bouton 1 -->
        <Button Content="Volume 100%" FontWeight="Bold" Background="peachpuff" Width="410" Height="88" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,480,0,0" FontSize="36">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="bouton_retour_parametre" Content="Retour" FontWeight="Bold" Background="Red" Width="410" Height="88" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,683,0,0" Click="but_retour_parametre" FontSize="36">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Bouton 3 -->
        <Button Content="Temps: 5min" FontWeight="Bold" Background="PeachPuff" Width="410" Height="88" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,581,0,0" FontSize="36">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBlock Text="Paramètre" FontSize="100" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,144,0,0" Height="161" Width="500"/>


    </Grid>
</UserControl>
