<UserControl x:Class="Crepe_Simulator.UCDemarrage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:Crepe_Simulator"
             mc:Ignorable="d"
             d:DesignHeight="1080" d:DesignWidth="1920">

    <Grid>
        
        <Viewbox Stretch="Uniform">
            <Canvas Width="1920" Height="1080">

                <!-- BOUTONS DU MENU -->
                <Button x:Name="bouton_jouer" Content="JOUER" 
                        Canvas.Left="727" Canvas.Top="464"
                        Height="125" Width="512" FontSize="48" FontWeight="Bold"
                        Background="#FFFFB105" Click="butJouer">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                BorderBrush="Black" BorderThickness="3"
                                CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="bouton_quitter" Content="QUITTER" 
                        Canvas.Left="1674" Canvas.Top="44"
                        Height="69" Width="191"
                        FontWeight="Bold" Background="#FFFF3939" Click="butQuitter" FontSize="22">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                BorderBrush="Black" BorderThickness="3"
                                CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="bouton_parametre" Content="PARAMÈTRES" 
                        Canvas.Left="727" Canvas.Top="785"
                        Width="512" Height="124" FontSize="48" FontWeight="Bold"
                        Background="#FFFFB105" Click="butParam">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                BorderBrush="Black" BorderThickness="3"
                                CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="bouton_reglesjeu" Content="RÈGLES DU JEU" 
                        Canvas.Left="727" Canvas.Top="629"
                        Width="512" Height="125" FontSize="48" FontWeight="Bold"
                        Background="#FFFFB105" Click="butRegles">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                BorderBrush="Black" BorderThickness="3"
                                CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Label Content="Creperie Simulator" 
                       Canvas.Left="514" Canvas.Top="154"
                       Height="146" Width="931" FontSize="120"
                       Foreground="Black" FontWeight="Bold" RenderTransformOrigin="0.5,0.5" FontFamily="Monotype Corsiva">
                    <Label.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="-0.559"/>
                            <RotateTransform/>
                            <TranslateTransform X="0.343"/>
                        </TransformGroup>
                    </Label.RenderTransform>
                </Label>

            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>