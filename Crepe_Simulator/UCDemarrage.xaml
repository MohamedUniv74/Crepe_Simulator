<UserControl x:Class="Crepe_Simulator.UCDemarrage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:Crepe_Simulator"
             mc:Ignorable="d"
             Height="450" Width="800">

    <Grid>

        <!-- Fond -->

        <!-- BOUTONS DU MENU -->
        <Button x:Name="bouton_jouer" Content="JOUER" 
                HorizontalAlignment="Center" Margin="0,154,0,0" VerticalAlignment="Top"
                Height="60" Width="200" FontSize="16" FontWeight="Bold"
                Background="#FFFFB105" Click="butJouer">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="Black" BorderThickness="3"
                        CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button Content="QUITTER" HorizontalAlignment="Left" Margin="693,20,0,0"
                VerticalAlignment="Top" Height="30" Width="80"
                FontWeight="Bold" Background="#FFFF3939" Click="butQuitter">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="Black" BorderThickness="3"
                        CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="bouton_parametre" Content="PARAMÈTRES" HorizontalAlignment="Center"
                Margin="0,309,0,0" VerticalAlignment="Top"
                Width="200" Height="60" FontSize="16" FontWeight="Bold"
                Background="#FFFFB105" Click="butParam">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="Black" BorderThickness="3"
                        CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="bouton_reglesjeu" Content="RÈGLES DU JEU" HorizontalAlignment="Center"
                Margin="0,234,0,0" VerticalAlignment="Top"
                Width="200" Height="60" FontSize="16" FontWeight="Bold"
                Background="#FFFFB105" Click="butRegles">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="Black" BorderThickness="3"
                        CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Label Content="Creperie Simulator" HorizontalAlignment="Center"
               Margin="0,60,0,0" VerticalAlignment="Top"
               Height="56" Width="368" FontSize="40"
               Foreground="Black" FontWeight="Bold"/>

    </Grid>
</UserControl>
