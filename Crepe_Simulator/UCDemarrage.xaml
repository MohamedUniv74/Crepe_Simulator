<UserControl x:Class="Crepe_Simulator.UCDemarrage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:Crepe_Simulator"
             mc:Ignorable="d"
             Height="1080" Width="1920">

    <Grid>

        <!-- Fond -->

        <!-- BOUTONS DU MENU -->
        <Button x:Name="bouton_jouer" Content="JOUER" 
                HorizontalAlignment="Left" Margin="727,464,0,0" VerticalAlignment="Top"
                Height="125" Width="512" FontSize="48" FontWeight="Bold"
                Background="#FFFFB105" Click="butJouer">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="Black" BorderThickness="3"
                        CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="bouton_quitter" Content="QUITTER" HorizontalAlignment="Left" Margin="1674,44,0,0"
                VerticalAlignment="Top" Height="69" Width="191"
                FontWeight="Bold" Background="#FFFF3939" Click="butQuitter" FontSize="22">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="Black" BorderThickness="3"
                        CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="bouton_parametre" Content="PARAMÈTRES" HorizontalAlignment="Left"
                Margin="727,785,0,0" VerticalAlignment="Top"
                Width="512" Height="124" FontSize="48" FontWeight="Bold"
                Background="#FFFFB105" Click="butParam">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="Black" BorderThickness="3"
                        CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="bouton_reglesjeu" Content="RÈGLES DU JEU" HorizontalAlignment="Left"
                Margin="727,629,0,0" VerticalAlignment="Top"
                Width="512" Height="125" FontSize="48" FontWeight="Bold"
                Background="#FFFFB105" Click="butRegles">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="Black" BorderThickness="3"
                        CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Label Content="Creperie Simulator" HorizontalAlignment="Left"
               Margin="514,154,0,0" VerticalAlignment="Top"
               Height="146" Width="931" FontSize="100"
               Foreground="Black" FontWeight="Bold" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.559"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.343"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>

    </Grid>
</UserControl>
