<UserControl x:Class="Crepe_Simulator.UCScore"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Crepe_Simulator"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image Source="/images/blury-background.png" Stretch="Fill"/>
        <Button Content="Rejouer" FontWeight="Bold" Background="peachpuff" Width="150" Height="35" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="309,253,0,0">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Label Content="SCORE : 000" HorizontalAlignment="Left" Height="119" Margin="234,92,0,0" VerticalAlignment="Top" Width="508" FontSize="48"/>

    </Grid>
</UserControl>
