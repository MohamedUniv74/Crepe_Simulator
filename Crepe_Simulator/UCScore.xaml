<UserControl x:Class="Crepe_Simulator.UCScore"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Crepe_Simulator"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        
        <!-- Viewbox pour maintenir les proportions -->
        <Viewbox Stretch="Uniform">
            <Canvas Width="800" Height="450">

                <!-- Label Score centré -->
                <Label Content="SCORE : 000" 
                       Canvas.Left="146" Canvas.Top="90"
                       Width="508" Height="119" 
                       FontSize="48" FontWeight="Bold"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"/>

                <!-- Bouton Rejouer centré -->
                <Button x:Name="bouton_rejouer" Content="Rejouer" 
                        Canvas.Left="325" Canvas.Top="250"
                        Width="150" Height="35" 
                        FontWeight="Bold" 
                        Background="peachpuff">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="Black" 
                                    BorderThickness="2" 
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>