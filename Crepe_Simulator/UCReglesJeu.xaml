<UserControl x:Class="Crepe_Simulator.UCReglesJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <!-- Permet de scaler le contenu comme UCJeu -->
    <Viewbox Stretch="Uniform">
        <Grid Width="800" Height="450">

            <!-- Fond blanc semi-transparent -->
            <Rectangle Fill="White" Opacity="0.75"/>

            <!-- Titre -->
            <TextBlock Text="Règles du jeu"
                       FontSize="48" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Margin="0,20,0,0" FontFamily="Monotype Corsiva"/>

            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="60,100,0,0">

                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <Ellipse Width="20" Height="20" Fill="#FFC18140" Stroke="Black"/>
                    <TextBlock Text="   Préparez la crêpe"
                               FontSize="24"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <Ellipse Width="20" Height="20" Fill="#FFC18140" Stroke="Black"/>
                    <TextBlock Text="   Ajoutez la garniture"
                               FontSize="24"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <Ellipse Width="20" Height="20" Fill="#FFC18140" Stroke="Black"/>
                    <TextBlock Text="   Gagnez des points et empochez de l’argent"
                               FontSize="24" TextWrapping="Wrap"
                               Width="600"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <Ellipse Width="20" Height="20" Fill="#FFC18140" Stroke="Black"/>
                    <TextBlock Text="   Servez les clients à temps"
                               FontSize="24"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <Ellipse Width="20" Height="20" Fill="#FFC18140" Stroke="Black"/>
                    <TextBlock Text="   Améliorez votre cuisinière pour diminuer le temps de cuisson"
                               FontSize="24"
                               VerticalAlignment="Center"/>
                </StackPanel>

            </StackPanel>

            <!-- Bouton retour -->
            <Button x:Name="bouton_retour_regles"
                    Content="RETOUR"
                    Width="120" Height="45"
                    Background="#FFFF3939"
                    FontSize="20" FontWeight="Bold"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,15,15,0"
                    Click="but_retour_regles">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="Black" BorderThickness="2"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </Grid>
    </Viewbox>

</UserControl>
